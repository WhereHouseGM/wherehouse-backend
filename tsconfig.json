{
	"compilerOptions": {
        "experimentalDecorators": true,
		"target": "es6",
		"module": "commonjs",
		"outDir": "dist",
		"sourceMap": true,
		"strictNullChecks": true,
		"baseUrl": "./src",
		"paths": {
			"@configs": ["configs"],
			"@configs/*": ["configs/*"],
			"@models": ["models"],
			"@models/*": ["models/*"],
			"@resources": ["resources"],
			"@resources/*": ["resources/*"]
		}
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules", "**/*.spec.ts"
	]
}
